<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputActivity"
    android:padding="16dp"
    android:background="@drawable/back2"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input :-"
            android:textSize="35dp"
            android:fontFamily="@font/tusj"
            android:textColor="#FFF"
            />

        <EditText
            android:id="@+id/ip_et_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:ems="10"
            android:hint="Height/room(in Feet)"
            android:fontFamily="@font/roboslabregular"

            android:textColorHint="#6fff"
            android:textColor="#9fFF"
            android:layout_centerHorizontal="true"
            />

        <EditText
            android:id="@+id/ip_et_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ip_et_height"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:fontFamily="@font/roboslabregular"
            android:hint="Width/room(in Feet)"
            android:textColorHint="#6fff"
            android:textColor="#9fFF"
        />

        <EditText
            android:id="@+id/ip_et_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ip_et_width"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:textColorHint="#6fff"
            android:textColor="#9fFF"
            android:fontFamily="@font/roboslabregular"
            android:hint="Length/room(in Feet)"
         />

        <EditText
            android:id="@+id/ip_et_bud"
            android:layout_width="wrap_content"
            android:textColorHint="#6fff"
            android:textColor="#9fFF"
            android:layout_height="wrap_content"
            android:layout_below="@id/ip_et_rooms"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:fontFamily="@font/roboslabregular"
            android:hint="Budget"
        />

        <EditText
            android:id="@+id/ip_et_floors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ip_et_length"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:textColorHint="#6fff"
            android:textColor="#9fFF"
            android:fontFamily="@font/roboslabregular"
            android:hint="No.of.Floors"
            />
        <EditText
            android:id="@+id/ip_et_rooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ip_et_floors"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:fontFamily="@font/roboslabregular"
            android:textColorHint="#6fff"
            android:textColor="#9fFF"
            android:hint="Rooms/Floor"
            />

        <Button
            android:id="@+id/ip_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ip_et_bud"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Submit" />
    </RelativeLayout>

</ScrollView>